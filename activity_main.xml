<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSeven"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:text="7"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonEight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toEndOf="@id/buttonSeven"
        android:layout_toRightOf="@id/buttonSeven"
        android:text="8"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="CALL AND SAVE APP"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoTextView"
        android:layout_marginBottom="30dp"
        android:enabled="false"
        android:gravity="bottom"
        android:inputType="number|text|numberDecimal"
        android:lines="2"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonNine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/buttonEight"
        android:layout_toRightOf="@id/buttonEight"
        android:text="9"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSeven"
        android:text="4"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNine"
        android:layout_alignEnd="@id/buttonNine"
        android:layout_alignRight="@id/buttonNine"
        android:text="6"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonOne"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFour"
        android:text="1"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSix"
        android:layout_alignEnd="@id/buttonSix"
        android:layout_alignRight="@id/buttonSix"
        android:text="3"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEight"
        android:layout_alignEnd="@id/buttonEight"
        android:layout_alignRight="@id/buttonEight"
        android:text="5"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonTwo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFive"
        android:layout_alignEnd="@id/buttonFive"
        android:layout_alignRight="@id/buttonFive"
        android:text="2"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonstar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonOne"
        android:text="*"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonZero"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonTwo"
        android:layout_alignEnd="@id/buttonTwo"
        android:layout_alignRight="@id/buttonTwo"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonhash"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonThree"
        android:layout_alignEnd="@id/buttonThree"
        android:layout_alignRight="@id/buttonThree"
        android:text="#"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttoncall"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/buttonstar"
        android:layout_marginTop="49dp"
        android:text="CALL"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonsave"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/buttonZero"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@id/buttoncall"
        android:layout_toRightOf="@id/buttoncall"
        android:text="SAVE"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttondel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@id/editText"
        android:layout_toRightOf="@id/editText"
        android:text="DEL"
        android:textColor="#000000"
        android:textSize="20sp" />


</RelativeLayout>